<#setting locale='de_AT'>
<#setting output_encoding='UTF-8'>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <Title>Digitales Ticket</Title>
    <style>
        * {
            font-family: 'Roboto', serif;
        }
        .hero {
            width: 100%;
            background: #ee6002;
            color: white;
        }
        .hero * {
            padding: 10px;
        }
        .description {
            margin: 2em;
        }
        .ticket {
            background: url("data:image/png;base64,");
            border: medium solid black;
        }
        .subsequent {
            page-break-before: always;
        }
        img {
            border: medium solid black;
            margin: 2em;
        }
        h1 {
            margin: 0;
        }
        .uuid {
            font-family: monospace;
        }
    </style>
</head>
<body>
<#list data as ticket>
    <#if ticket?counter == 1>
        <div class="ticket">
    <#else>
        <div class="ticket subsequent">
    </#if>
        <div class="hero">
            <h1>
                ${ticket.event.title}
            </h1>
            <h2>
                ${ticket.seat}
            </h2>
        </div>
        <div>
            <ul>
                <li><b>Datum:</b> ${ticket.performance.formatDateTime()}</li>
                <li><b>Dauer:</b> ${ticket.event.duration} Minuten</li>
                <li><b>Kategorie:</b> ${ticket.event.category}</li>
                <li><b>Preis:</b> ${ticket.formatPrice()}â‚¬</li>
            </ul>
            <p class="description">
                ${ticket.event.description}
            </p>
            <table>
                <tr>
                    <td>
                        <img src="${ticket.getBarcode()}" alt="${ticket.getUUID().toString()}"/>
                    </td>
                    <td>
                        <b>${ticket.performance.location.description}</b>
                        <br/>
                        ${ticket.performance.location.address.street}&nbsp;${ticket.performance.location.address.housenr}
                        <br/>
                        ${ticket.performance.location.address.postalcode} ${ticket.performance.location.address.city}
                    </td>
                </tr>
                <tr>
                    <td class="uuid">
                        ${ticket.getUUID()}
                    </td>
                </tr>
            </table>
        </div>
    </div>
</#list>
</body>
</html>